{
  "name": "Borderlands SHiFT Code",
  "short_name": "SHiFT Code",
  "version": "1.2",
  "description": "Copy the latest Borderlands SHiFT code to your clipboard",
  "author": "Mario Uher",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "browser_action": {},
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
